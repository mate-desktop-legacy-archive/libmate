<?xml version="1.0"?>
<mateconfschemafile>
  <schemalist>
    <schema>
      <key>/schemas/desktop/mate/peripherals/mouse/left_handed</key>
      <applyto>/desktop/mate/peripherals/mouse/left_handed</applyto>
      <owner>mate</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Mouse button orientation</short>
        <long>Swap left and right mouse buttons for left-handed mice.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/desktop/mate/peripherals/mouse/single_click</key>
      <applyto>/desktop/mate/peripherals/mouse/single_click</applyto>
      <owner>mate</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Single Click</short>
        <long>Single click to open icons.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/desktop/mate/peripherals/mouse/motion_acceleration</key>
      <applyto>/desktop/mate/peripherals/mouse/motion_acceleration</applyto>
      <owner>mate</owner>
      <type>float</type>
      <default>-1</default>
      <locale name="C">
        <short>Single Click</short>
        <long>Acceleration multiplier for mouse motion.  A value of -1
        is the system default.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/desktop/mate/peripherals/mouse/motion_threshold</key>
      <applyto>/desktop/mate/peripherals/mouse/motion_threshold</applyto>
      <owner>mate</owner>
      <type>int</type>
      <default>-1</default>
      <locale name="C">
        <short>Motion Threshold</short>
        <long>Distance in pixels the pointer must move before
        accelerated mouse motion is activated.  A value of -1 is the
        system default.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/desktop/mate/peripherals/mouse/drag_threshold</key>
      <applyto>/desktop/mate/peripherals/mouse/drag_threshold</applyto>
      <owner>mate</owner>
      <type>int</type>
      <default>8</default>
      <locale name="C">
        <short>Drag Threshold</short>
        <long>Distance before a drag is started.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/desktop/mate/peripherals/mouse/double_click</key>
      <applyto>/desktop/mate/peripherals/mouse/double_click</applyto>
      <owner>mate</owner>
      <type>int</type>
      <default>400</default>
      <locale name="C">
        <short>Double Click Time</short>
        <long>Length of a double click.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/desktop/mate/peripherals/mouse/locate_pointer</key>
      <applyto>/desktop/mate/peripherals/mouse/locate_pointer</applyto>
      <owner>mate</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Locate Pointer</short>
        <long>Highlights the current location of the pointer when the
        Control key is pressed and released.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/desktop/mate/peripherals/mouse/cursor_font</key>
      <applyto>/desktop/mate/peripherals/mouse/cursor_font</applyto>
      <owner>mate</owner>
      <type>string</type>
      <locale name="C">
	<short>Cursor font</short>
	<long>
	  Font name of the cursor. If unset, the default font is
	  used. This value is only propagated to the X server start of
	  each session, so changing it mid-session won't have an effect
	  until the next time you log in.
	</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/desktop/mate/peripherals/mouse/cursor_theme</key>
      <applyto>/desktop/mate/peripherals/mouse/cursor_theme</applyto>
      <owner>mate</owner>
      <type>string</type>
      <locale name="C">
	<short>Cursor theme</short>
	<long>
	  Cursor theme name. Used only by Xservers that support Xcursor,
	  such as XFree86 4.3 and later.
	</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/desktop/mate/peripherals/mouse/cursor_size</key>
      <applyto>/desktop/mate/peripherals/mouse/cursor_size</applyto>
      <owner>mate</owner>
      <type>int</type>
      <default>18</default>
      <locale name="C">
	<short>Cursor size</short>
	<long>
	  Size of the cursor referenced by cursor_theme.
	</long>
      </locale>
    </schema>
  </schemalist>
</mateconfschemafile>
